<UserControl x:Class="ScreenKeyboard.ButtonsKB.BackspaceKB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenKeyboard.ButtonsKB"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:kbrd="clr-namespace:Rife.Keyboard;assembly=Rife.Keyboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RepeatButton Padding="0" Click="RepeatButton_Click" Interval="1" Focusable="False">
            <materialDesign:PackIcon Kind="BackspaceOutline" Height="auto" Width="auto" 
                                         Foreground="Yellow" Name="IconControl"/>

        </RepeatButton>
        <kbrd:VirtualKeyKeyboardKey VirtualKey="BACK" x:Name="KeyButton1" Visibility="Hidden">
        </kbrd:VirtualKeyKeyboardKey>
    </Grid>
</UserControl>
